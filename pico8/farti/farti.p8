-- level stuff
current_level = 1

function draw_map()
	map(0,0)
end

function init_level()
	set_player_pos()
end

function set_player_pos()
	for x=1,128 do
		for y=1,128 do
			if mget(x,y) == 193 then
				mset(x,y,0)
				
				px = x * 8
				py = y * 8
				
				return
			end
		end
	end
	
	assert(false, "no player position set in " ..
		"level: "..current_level)
end
